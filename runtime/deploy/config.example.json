{
  "hub": {
    "url": "ws://hub:8080/ws/runtime",
    "token": "dev-runtime-token-change-me",
    "tls_skip_verify": false,
    "reconnect_interval": "2s",
    "max_reconnect_delay": "60s"
  },
  "runtime": {
    "id": "local-dev",
    "max_sessions": 10,
    "default_timeout": "30m",
    "max_output_bytes": 10485760,
    "idle_timeout": "30s",
    "log_level": "info"
  },
  "agents": [
    {
      "id": "claude-code-1",
      "name": "Claude Code",
      "profile": "claude-code",
      "tags": {"env": "dev"},
      "claude_code": {
        "work_dir": "/workspace",
        "model": "sonnet",
        "permission_mode": "dangerously-skip-permissions",
        "max_turns": 25,
        "system_prompt": "You are a helpful coding assistant."
      }
    },
    {
      "id": "copilot-1",
      "name": "GitHub Copilot",
      "profile": "github-copilot",
      "tags": {"env": "dev"},
      "copilot": {
        "work_dir": "/workspace",
        "model": "claude-sonnet-4.5",
        "max_autopilot_continues": 10,
        "allowed_tools": ["shell(git *)"],
        "denied_tools": ["shell(rm -rf *)"]
      },
      "security": {
        "permission_mode": "skip"
      }
    },
    {
      "id": "codex-1",
      "name": "OpenAI Codex",
      "profile": "codex",
      "tags": {"env": "dev"},
      "codex": {
        "work_dir": "/workspace",
        "model": "gpt-5.3-codex",
        "approval_mode": "on-request",
        "sandbox_mode": "workspace-write",
        "full_auto": true,
        "additional_dirs": ["/data"]
      }
    },
    {
      "id": "gemini-1",
      "name": "Gemini CLI",
      "profile": "gemini-cli",
      "tags": {"env": "dev"},
      "gemini": {
        "work_dir": "/workspace",
        "model": "gemini-2.5-pro",
        "approval_mode": "auto_edit",
        "include_directories": ["/data", "/config"]
      }
    },
    {
      "id": "kilo-1",
      "name": "Kilo Code",
      "profile": "kilo-code",
      "tags": {"env": "dev"},
      "kilo": {
        "work_dir": "/workspace",
        "model": "anthropic/claude-sonnet-4",
        "provider": "anthropic",
        "mode": "code",
        "system_prompt": "Focus on clean, maintainable code."
      },
      "security": {
        "permission_mode": "skip"
      }
    },
    {
      "id": "echo-cli",
      "name": "Echo CLI",
      "profile": "generic-cli",
      "tags": {"env": "dev", "purpose": "testing"},
      "cli": {
        "command": "cat",
        "spawn_policy": "per-session"
      }
    },
    {
      "id": "date-job",
      "name": "Date Job",
      "profile": "generic-job",
      "tags": {"env": "dev", "purpose": "testing"},
      "job": {
        "command": "date",
        "max_runtime": "10s"
      }
    },
    {
      "id": "httpbin-http",
      "name": "HTTPBin",
      "profile": "generic-http",
      "tags": {"env": "dev", "purpose": "testing"},
      "http": {
        "base_url": "https://httpbin.org/post",
        "method": "POST",
        "timeout": "30s"
      }
    }
  ]
}
